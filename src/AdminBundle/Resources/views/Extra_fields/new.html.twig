{% extends 'AdminBundle::layout_admin.html.twig' %}

{% block page_header -%}
    Создание дополнительного поля
{% endblock %}

{% block content -%}

    {#{{ form(form) }}#}
    
    {{ form_start(form) }}
    <div class="action-buttons">
        {{ form_row(form.children["submit"]) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.title) }}
        <label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.title) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.title) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_errors(form.xml_title) }}
        <label for="inputEmail3" class="col-sm-2 control-label">{{ form_label(form.xml_title) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.xml_title) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_errors(form.type) }}
        <label for="" class="col-sm-2 control-label">{{ form_label(form.type) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.type) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_errors(form.show_it) }}
        <label for="" class="col-sm-2 control-label">{{ form_label(form.show_it) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.show_it) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_errors(form.showcase) }}
        <label for="" class="col-sm-2 control-label">{{ form_label(form.showcase) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.showcase) }}
        </div>
    </div>
    {{ form_end(form) }}

    <div class="actions-wr">
        <a href="{{ path('extra_fields') }}">
            Назад к списку
        </a>
    </div>
{% endblock %}

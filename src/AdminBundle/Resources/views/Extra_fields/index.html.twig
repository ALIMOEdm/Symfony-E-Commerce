{% extends 'AdminBundle::layout_admin.html.twig' %}

{% block page_header -%}
    Список дополнительных полей
{% endblock %}

{% block content -%}
    
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row row-cstm">
                        <div class="col-md-4">
                            <div class="create-new-entity-action">
                                <a href="{{ path('extra_fields_new') }}">
                                    Создать новое дополнительное поле
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="">
{#                                <input type="text" class="form-control width-100" id="" placeholder="">#}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="navigation-paginator-wr">
                                <div class="navigation navigation-paginator">
                                    {{ knp_pagination_render(pagination) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-sm-12">

                            <table class="records_list table table-striped table-bordered table-hover dataTable no-footer">
                                <thead>
                                    <tr>
                                        <th>Наименование</th>
                                        <th>Наименование для xml</th>
                                        <th>Тип</th>
                                        <th>Отображать в фильтре</th>
                                        <th>Отображать в витрине</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for entity in pagination %}
                                    <tr>
                                        <td>{{ entity.title }}</td>
                                        <td>{{ entity.xmltitle }}</td>
                                        <td>
                                            {{ entity.type }}
                                        </td>
                                        <td>
                                            {% if entity.showit %}
                                                Да
                                            {%else%}
                                                Нет
                                            {%endif%}
                                        </td>
                                        <td>
                                            {% if entity.showcase %}
                                                Да
                                            {%else%}
                                                Нет
                                            {%endif%}
                                        </td>
                                        <td>
                                            <div>
                                                <a href="{{ path('extra_fields_show', { 'id': entity.id }) }}">Подробнее</a>
                                            </div>
                                            <div>
                                                <a href="{{ path('extra_fields_edit', { 'id': entity.id }) }}">Изменить</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="create-new-entity-action">
                                            <a href="{{ path('extra_fields_new') }}">
                                                Создать новое дополнительное поле
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4">
                                        <div class="navigation-paginator-wr">
                                            <div class="navigation navigation-paginator">
                                                {{ knp_pagination_render(pagination) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endblock %}

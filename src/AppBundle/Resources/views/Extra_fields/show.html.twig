{% extends 'AppBundle::layout_admin.html.twig' %}

{% block page_header -%}
    Поле {{ entity.title }}
{% endblock %}

{% block content -%}
    <table class="record_properties table table-striped table-bordered table-hover dataTable no-footer">
        <tbody>
            <tr>
                <th>Наименование</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Наименование для xml</th>
                <td>{{ entity.xmltitle }}</td>
            </tr>
            <tr>
                <th>Тип</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Отображать в фильтре</th>
                <td>
                    {% if entity.showit %}
                        Да
                    {%else%}
                        Нет
                    {%endif%}
                </td>
            </tr>
            <tr>
                <th>Отображать в витрине</th>
                <td>
                    {% if entity.showcase %}
                        Да
                    {%else%}
                        Нет
                    {%endif%}
                </td>
            </tr>
            <tr>
                <th>Создано</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Последнее изменение</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions-wr">
        <a href="{{ path('extra_fields') }}">
            Назад к списку
        </a>
    </div>
    <div class="actions-wr">
        <a href="{{ path('extra_fields_edit', { 'id': entity.id }) }}">
            Изменить
        </a>
    </div>
    <div class="actions-wr">
        {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, { 'label': 'Удалить' }, { 'attr': {'class': 'btn btn-danger', 'type': 'button'} }) }}
        {{ form_end(delete_form) }}
    </div>
</ul>
{% endblock %}

{% extends 'AppBundle::layout_admin.html.twig' %}

{% block page_header -%}
    Список категорий
{% endblock %}

{% block content -%}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="create-new-entity-action">
                                 <a href="{{ path('category_new') }}">
                                     Создать новую категорию
                                 </a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="records_list table table-striped table-bordered table-hover dataTable no-footer">
                                <thead>
                                    <tr>
                                        <th>Наименование</th>
                                        <th>Наименование для xml</th>
                                        <th>Родительская категория</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td>{{ entity.title }}</td>
                                        <td>{{ entity.xmltitle }}</td>
                                        <td>
                                            {% if entity.getParentCategoryEntity() %}
                                                {{ entity.getParentCategoryEntity().getTitle() }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        {#<td>
                                            {% if entity.parentcategory %}
                                                {{ entity.parentcategory }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>#}
                                        <td>
                                            <div>
                                                <a href="{{ path('category_show', { 'id': entity.id }) }}">Подробнее</a>
                                            </div>
                                            <div>
                                                <a href="{{ path('category_edit', { 'id': entity.id }) }}">Изменить</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <div>
                                 <a href="{{ path('category_new') }}">
                                     Создать новую категорию
                                 </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
